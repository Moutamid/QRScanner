<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QRScanner" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/active_icon</item>
        <item name="colorPrimaryVariant">@color/active_icon</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:textColorHint">@color/lightGray2</item>
        <item name="cardBackgroundColor">@color/headingColour</item>
        <!-- Secondary brand color. -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorSecondary">@color/active_icon</item>
        <item name="colorSecondaryVariant">@color/active_icon</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
<!--        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">false</item>-->
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/active_icon</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomTabTexStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="Theme.QRScanner.ChipsColor" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/wifi_bg</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">16sp</item>
        <item name="checkedIconTint">@color/wifi_solid</item>
    </style>

</resources>