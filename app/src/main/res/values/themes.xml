<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QRScanner" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="cardBackgroundColor">@color/lightGray2</item>
        <item name="android:textColorHint">@color/lightGray2</item>
<!--        <item name="android:windowTranslucentStatus">true</item>-->
<!--        <item name="android:windowFullscreen">true</item>-->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple</item>
        <item name="colorSecondaryVariant">@color/purple</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
<!--        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">false</item>-->
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/purple</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Progress_color">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="CustomTabTexStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="Theme.QRScanner.ChipsColor" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/wifiColor</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">16sp</item>
        <item name="checkedIconTint">@color/red</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#1f234f</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">#00ABFF</item>
    </style>
    <style name="buttonView" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/NativeAdButton</item>
    </style>
    <style name="NativeAdButton" >
        <item name="colorPrimary">#5ED9EF</item>
        <item name="android:shadowColor">@color/black</item>
    </style>
    <style name="bottomNav" parent="Widget.MaterialComponents.BottomNavigationView" >
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="activeIcon" parent="Widget.MaterialComponents.BottomNavigationView" >
        <item name="iconTint">@color/teal_200</item>
    </style>
</resources>