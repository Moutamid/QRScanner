<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">


       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/history_recyclerview"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

       <ImageView
           android:id="@+id/all_delete_history"
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:layout_alignParentEnd="true"
           android:layout_alignParentBottom="true"
           android:layout_marginStart="20dp"
           android:layout_marginTop="20dp"
           android:layout_marginEnd="20dp"
           android:layout_marginBottom="20dp"
           android:padding="12sp"
           android:background="@drawable/contact_edit_back"
           android:backgroundTint="@color/black"
           app:tint="@color/contactColor"
           android:contentDescription="@string/delete_history"
           android:onClick="deleteAllHistory"
           android:src="@drawable/delete" />


       <TextView
           android:id="@+id/tv_is_empty"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="18sp"
           android:textStyle="bold"
           android:textColor="@color/black"
           android:text="@string/history_is_empty"
           android:layout_centerVertical="true"
           android:layout_centerHorizontal="true"
           android:visibility="gone"
           />


</RelativeLayout>